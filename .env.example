# Review Pilot AI - Environment Configuration Template
# Copy this file to .env.local and fill in your actual values

# Application Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:8084
PORT=8084

# Database Configuration
# For development, leave empty to use SQLite (data/review-pilot.db)
# For production, use PostgreSQL connection string
DATABASE_URL=

# Authentication & Security
# Generate a secure random string (at least 32 characters)
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=7d

# AI Integration (OpenRouter)
# Get your API key from https://openrouter.ai/
OPENROUTER_API_KEY=your-openrouter-api-key-here

# Stripe Payment Integration
# Get these from your Stripe dashboard
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key-here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key-here
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret-here

# Google OAuth (Optional - for social login)
# Get these from Google Cloud Console
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Facebook OAuth (Optional - for social login)
# Get these from Facebook Developers
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Email Configuration (Future feature)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Redis Configuration (Optional - for caching)
# REDIS_URL=redis://localhost:6379

# Logging & Monitoring (Optional)
# SENTRY_DSN=your-sentry-dsn-here
# ANALYTICS_ID=your-analytics-id-here

# Development Only
# Set to true to enable debug logging
DEBUG=false

# API Rate Limiting
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
# MAX_FILE_SIZE=10485760
# UPLOAD_DIR=uploads

# Platform API Keys (Optional - for review platform integrations)
# These will be stored encrypted in the database per organization
# GOOGLE_PLACES_API_KEY=your-google-places-api-key
# YELP_API_KEY=your-yelp-api-key
# FACEBOOK_ACCESS_TOKEN=your-facebook-access-token
# TRIPADVISOR_API_KEY=your-tripadvisor-api-key
# TRUSTPILOT_API_KEY=your-trustpilot-api-key
# ZOMATO_API_KEY=your-zomato-api-key
